<?xml version="1.0"?>
<!-- this catches all boxee stream urls, nice as a backup plan if url is herpity derpy-->
<site site="http://.*.crunchyroll.com/boxee_showmedia/.*"
	plugin="http://static..*.crunchyroll.com/flash/.*/.*StandardVideoPlayer.swf.*"
	initialState="playing" version="2.0">

	<setCookie domain=".crunchyroll.com" path="/" name="temp_ad_closed" value="1" /> 
	
	<crop x="0" y="0" width="0" height="0"/>
	<seekbar type="javascript">
		<percentComplete equals="$.getPlayhead()/$.getDuration() * 100.0"/>
		<bigStep minus="$.seek($.getPlayhead() - 10)" plus="$.seek($.getPlayhead() + 10)"/>
		<smallStep minus="$.seek($.getPlayhead() - 10)" plus="$.seek($.getPlayhead() + 10)"/>
		<end condition="$.getPlayhead() &gt; 0 &amp;&amp; $.getPlayhead() &gt; $.getDuration()"/>
	</seekbar>

	
	<state name="playing">
		<event>
			<condition>
				<command name="pause"/>
			</condition>
			<action>
				<click x="312" y="206"/>
				<goto state="paused"/>
			</action>
		</event>
		<event>
			<condition>
				<color x="8" y="8" rgb="555555"/>
			</condition>
			<action>
				<goto state="playing" />
			</action>
		</event>
	</state>
	<!-- this is for later when i figure out how to support it -->
	<state name="ad_playing">
		<event>
			<condition>
				<or>
					<color x="19" y="365" rgb="ffffff"/>
					<not>
						<color x="8" y="8" rgb="555555"/>
					</not>
				</or>				
			</condition>
			<action>
				<goto state="playing"/>
			</action>
		</event>
	</state>

	<state name="paused">
		<event>
			<condition>
					<command name="play"/>
			</condition>
			<action>
				<click x="312" y="206"/>
				<goto state="playing"/>
			</action>
		</event>
		<event>
			<condition>
				<or>
					<color x="19" y="365" rgb="808080"/>
					<color x="19" y="365" rgb="333333"/>
				</or>
			</condition>
			<action>
				<goto state="playing"/>
			</action>
		</event>
		<event>
			<condition>
				<color x="8" y="8" rgb="555555"/>
			</condition>
			<action>
				<goto state="playing" />
			</action>
		</event>
	</state>
	
</site>